{
  "urn": "urn:mediator:xds",
  "version": "${version}",
  "name": "OpenHIE XDS.b Mediator",
  "description": "An XDS.b mediator for OpenHIE integration",
  "endpoints": [
    {
      "name": "XDS.b Mediator",
      "host": "localhost",
      "port": "8500",
      "type": "http"
    }
  ],
  "defaultChannelConfig": [
    {
      "name": "XDS.b Mediator",
      "urlPattern": "^/xds(registry|repository)$",
      "type": "http",
      "allow": ["xds"],
      "routes": [
        {
          "name": "XDS.b Mediator",
          "host": "localhost",
          "port": "8500",
          "type": "http",
          "primary": "true"
        }
      ]
    },
    {
      "name": "DSUB",
      "urlPattern": "^/dsub$",
      "type": "http",
      "allow": ["xds"],
      "routes": [
        {
          "name": "XDS.b Mediator - DSUB",
          "host": "localhost",
          "port": "8500",
          "type": "http",
          "primary": "true"
        }
      ]
    }
  ]
}
